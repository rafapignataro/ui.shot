{
  "manifest_version": 3,
  "name": "Test Screenshot Extension",
  "version": "1.3",
  "description": "Uses the chrome.tabs API to take a screenshot of the active tab.",
  "background": {
    "service_worker": "service-worker.js"
  },
  "action": {
    "default_title": "Take a screen shot!"
  },
  "permissions": [
    "activeTab"
  ],
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "css": [
        "styles.css"
      ],
      "js": [
        "content-script.js"
      ]
    }
  ]
}